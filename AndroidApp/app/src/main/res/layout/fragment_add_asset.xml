<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.AddAsset">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_gravity="center"
       android:gravity="center"
       android:orientation="vertical">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:gravity="center"
           android:orientation="vertical">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Add Asset"
               android:fontFamily="@font/df"
               android:textSize="60sp"
               android:textColor="#000"
               android:gravity="center"
               android:layout_marginBottom="50dp"
               android:layout_gravity="center"/>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:paddingLeft="30dp"
               android:paddingRight="30dp"
               android:id="@+id/editLayout"
               android:layout_marginBottom="100dp"
               android:visibility="gone"
               android:orientation="vertical">

               <com.google.android.material.textfield.TextInputLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:backgroundTint="#000">

                   <com.google.android.material.textfield.TextInputEditText
                       android:id="@+id/edit_name"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:background="#fff"
                       android:hint="Enter Asset Name"
                       android:inputType="text"/>
               </com.google.android.material.textfield.TextInputLayout>

               <com.google.android.material.textfield.TextInputLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:backgroundTint="#000">

                   <com.google.android.material.textfield.TextInputEditText
                       android:id="@+id/edit_amount"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:background="#fff"
                       android:hint="Enter Asset Amount"
                       android:inputType="numberDecimal"/>
               </com.google.android.material.textfield.TextInputLayout>

               <com.google.android.material.textfield.TextInputLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:backgroundTint="#000">

                   <com.google.android.material.textfield.TextInputEditText
                       android:id="@+id/edit_unit"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:background="#fff"
                       android:hint="Enter Asset Unit"
                       android:inputType="text"/>
               </com.google.android.material.textfield.TextInputLayout>

               <com.google.android.material.textfield.TextInputLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:backgroundTint="#000">

                   <com.google.android.material.textfield.TextInputEditText
                       android:id="@+id/edit_description"
                       android:layout_width="match_parent"
                       android:layout_height="150dp"
                       android:background="#fff"
                       android:hint="Enter Asset Description (Please Include Full Details of the asset)"
                       android:inputType="textMultiLine"/>
               </com.google.android.material.textfield.TextInputLayout>


               <Button
                   android:id="@+id/addAsset"
                   android:layout_width="match_parent"
                   android:text="Add Asset"
                   android:layout_marginTop="30dp"
                   android:textFontWeight="700"
                   android:layout_height="wrap_content"/>

           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:paddingLeft="30dp"
               android:paddingRight="30dp"
               android:id="@+id/addLayout"
               android:layout_marginBottom="100dp"
               android:visibility="visible"
               android:orientation="vertical">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginBottom="10dp"
                   android:layout_weight="9">

                   <TextView
                       android:layout_width="0dp"
                       android:layout_weight="3"
                       android:layout_height="wrap_content"
                       android:textSize="22sp"
                       android:fontFamily="@font/df"
                       android:textColor="#000"
                       android:text="Name:"/>

                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="6"
                       android:textSize="22sp"
                       android:fontFamily="@font/df"
                       android:textColor="#000"
                       android:id="@+id/finalName"
                       android:text="Apple"/>



               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginBottom="10dp"
                   android:layout_weight="9">

                   <TextView
                       android:layout_width="0dp"
                       android:layout_weight="3"
                       android:layout_height="wrap_content"
                       android:textSize="22sp"
                       android:fontFamily="@font/df"
                       android:textColor="#000"
                       android:text="Amount:"/>

                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="6"
                       android:textSize="22sp"
                       android:fontFamily="@font/df"
                       android:textColor="#000"
                       android:id="@+id/finalAmount"
                       android:text="100"/>



               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginBottom="10dp"
                   android:layout_weight="9">

                   <TextView
                       android:layout_width="0dp"
                       android:layout_weight="3"
                       android:layout_height="wrap_content"
                       android:textSize="22sp"
                       android:fontFamily="@font/df"
                       android:textColor="#000"
                       android:text="Unit:"/>

                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="6"
                       android:textSize="22sp"
                       android:fontFamily="@font/df"
                       android:textColor="#000"
                       android:id="@+id/finalUnit"
                       android:text="Kg"/>



               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginBottom="10dp"
                   android:layout_weight="9">

                   <TextView
                       android:layout_width="0dp"
                       android:layout_weight="3"
                       android:paddingTop="10dp"
                       android:layout_height="wrap_content"
                       android:textSize="18sp"
                       android:fontFamily="@font/df"
                       android:textColor="#000"
                       android:text="Description:"/>


                   <ScrollView
                       android:layout_width="0dp"
                       android:layout_weight="6"
                       android:padding="10dp"
                       android:layout_height="150dp">
                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:textSize="18sp"
                           android:textColor="#000"
                           android:id="@+id/finalDescription"
                           android:text="Apple From Australia"/>
                   </ScrollView>


               </LinearLayout>


               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_weight="2">

                   <Button
                       android:id="@+id/cancelAsset"
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:layout_marginRight="10dp"
                       android:backgroundTint="#C50505"
                       android:text="Edit Info"
                       android:textFontWeight="700"
                       android:layout_height="wrap_content"/>

                   <Button
                       android:id="@+id/addAssetFinal"
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:text="Add Asset"
                       android:layout_marginLeft="10dp"
                       android:textFontWeight="700"
                       android:layout_height="wrap_content"/>

               </LinearLayout>

           </LinearLayout>
       </LinearLayout>

       <ProgressBar
           android:id="@+id/progressbar"
           android:visibility="gone"
           android:layout_width="match_parent"
           android:layout_centerHorizontal="true"
           android:layout_centerVertical="true"
           style="?android:attr/progressBarStyleLarge"
           android:indeterminateTintMode="src_atop"
           android:indeterminateTint="#3F51B5"
           android:layout_height="wrap_content"/>

   </RelativeLayout>

</FrameLayout>